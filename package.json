{
    "name": "moveon",
    "displayName": "MoveOn",
    "description": "Move on from quotes and parenthesis.",
    "version": "0.0.1",
    "publisher": "jrmce",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "MoveOn configuration",
            "properties": {
                "moveOn.disabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disable MoveOn by default."
                },
                "moveOn.moveOnFrom": {
                    "type": "array",
                    "default": ["'", ")"],
                    "description": "Characters to skip over when pressing the hot key (tab by default)."
                }
            }
        },
        "commands": [
            {
                "command": "moveOn.disable",
                "title": "Disable MoveOn"
            },
            {
                "command": "moveOn.enable",
                "title": "Enable MoveOn"
            }
        ],
        "keybindings": [
            {
                "command": "moveOn.execute",
                "key": "tab",
                "when": "editorTextFocus && !suggestWidgetVisible"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
